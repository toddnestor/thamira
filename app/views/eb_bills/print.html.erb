<html>
	<head>
	  <title>Thamira</title>
	  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<div class='well'>
			<div class="clearfix">
				<h1 class="text-center">THAMIRA ENTERPRISE</h1>
				<div class='hidden-print margin-bottom-20 pull-right'>
					<%= link_to "New Bill", eb_bills_path, class: 'btn btn-primary' %>
				</div>
				<h3 class="text-center">C-RECEIPT FOR ELECTRICITY BILL</h3>
				<dl class="dl-horizontal">
					<dt class="text-align-left">Date</dt>
					<dd><strong><%= @eb_bill.updated_at.to_date %></strong></dd>
					<dt class="text-align-left">Bill Number</dt>
					<dd><strong><%= @eb_bill.bill_number %></strong></dd>
					<dt class="text-align-left">Service Number</dt>
					<dd><strong><%= @eb_bill.service_number %></strong></dd>
					<dt class="text-align-left">Service Name</dt>
					<dd><strong><%= @eb_bill.service_name %></strong></dd>
				</dl>
				TOTAL: <strong><%= @eb_bill.total %></strong>
			</div>
		</div>
		<script type="text/javascript">
			window.print();
		</script>
	</body>
</html>