<html>
	<head>
	  <title>Thamira</title>
	  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<div class='well'>
			<div class="clearfix">
				<h1 class="text-center">THAMIRA ENTERPRISE</h1>
				<div class='hidden-print margin-bottom-20 pull-right'>
					<%= link_to "New Bill", payments_bills_path, class: 'btn btn-primary' %>
				</div>
				<h3 class="text-center">C-RECEIPT FOR PAYMENTS BILL</h3>
				<% {"Date" => @payments_bill.updated_at.to_date, "Bill Number" => @payments_bill.bill_number, "Mobile Number" => @payments_bill.mobile_number, "Service Name" => @payments_bill.service_name, "Total" => @payments_bill.total}.each do |k,v| %>
					<div class='span12'>
							<div class='span6'><%= k %></div>
							<div class='span5'><strong><%= v %></strong></div>
					</div>
				<% end %>
			</div>
		</div>
		<script type="text/javascript">
			window.print();
		</script>
	</body>
</html>