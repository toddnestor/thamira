<!DOCTYPE html>
<html>
<head>
  <title>Thamira</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<h1 style ="text-align: center;background-color: #ddd;margin: 0px;border: solid 1px #9C9B9B;color: #585858;line-height: 60px;">THAMIRA ENTERPRISE</h1>
	<div class='container'>

		<div class="page-header">
			<h2 class="pull-left"><%= yield(:page_title) %></h2>
			<% if current_user %>
				<div class="pull-right hidden-print">
					<%= current_user.email %>, <%= link_to  "Sign Out", destroy_user_session_path, method: :delete %>
				</div>
			<% end %>
			<div class="clearfix"></div>
		</div>
		<% if flash[:notice].present? %>
			<div class="alert alert-success hidden-print">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<%= flash[:notice] %>
			</div>
		<% end %>
		<% if flash[:alert].present? %>
			<div class="alert alert-danger hidden-print">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<%= flash[:alert] %>
			</div>
		<% end %>

		<%= yield %>
	</div>
</body>
</html>
